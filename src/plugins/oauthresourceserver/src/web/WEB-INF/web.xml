<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <filter>
        <filter-name>Keycloak Filter</filter-name>
        <filter-class>org.keycloak.adapters.servlet.KeycloakOIDCFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Keycloak Filter</filter-name>
        <url-pattern>/plugins/oauthresourceserver/keycloak/*</url-pattern>
        <url-pattern>/plugins/oauthresourceserver/protected/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>ResourceServlet</servlet-name>
        <servlet-class>com.inteno.iopsys.plugin.oauthresourceserver.ResourceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResourceServlet</servlet-name>
        <url-pattern>/protected/resources/*</url-pattern>
    </servlet-mapping>

</web-app>